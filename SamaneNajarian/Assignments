Assignment4

alphabetstring = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ'
sample1 = 'ABCDEFGHIJKLM'
sample2 = 'NOPQRSTUVWXYZ'

for char in reversed(alphabetstring):
    print(char)

print("="*60)

for char1,char2 in zip(sample1[::2],sample2[1::2]):
    print(f'{char1}:{char2}')
